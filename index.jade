doctype html
html(lang='en-us')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width' initial-scale='1')

    title Buckle

    //- Bower
    link(rel='stylesheet' href='bower_components/normalize-css/normalize.css')

    //- Buckle
    link(href='dist/css/buckle.css', rel='stylesheet', type='text/css')

  body

    //- Imports
    include buckle/buckle.jade

    //- include examples/menu.jades

    #page.page
      include examples/header.jade
      include examples/panel.jade
      include examples/form-group.jade

      //- CopyCat examples
      include examples/github-commit-history.jade
      include examples/twitter-feed.jade

      //- Modules
      //- include examples/blog.jade

      //- examples
      //- include examples/menu-sidebar.jade
      include examples/heading.jade
      include examples/code.jade
      include examples/blockquote.jade
      include examples/horizontal-rule.jade
      include examples/list.jade

      //- test stuff

      +section
        +button('Hello world')

    //- Bower
    script(src='bower_components/jquery/dist/jquery.min.js')

    //- Buckle
    script(src='dist/js/jquery.buckle.js')
